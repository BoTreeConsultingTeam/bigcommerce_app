<% unless flash.empty? %>
  <div class="flash_msg alert_msg padding-top mrg-lft-40 mrg-rht-40">
    <% flash.each do |name, message| %>
      <div class="text-center alert alert-<%= name %>">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <ul class="flash-msg-notice">
          <% if message.is_a?Array%>
            <% message.each do |msg| %>
            <li> <%= msg %> </li>
            <% end %>
          <% else %>
            <li> <%= message %> </li>
          <% end%>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>
