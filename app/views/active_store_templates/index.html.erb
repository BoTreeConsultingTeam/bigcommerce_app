<p id="notice">
	<%= notice %>
</p>
<div class="container" style="margin-top: 90px;">
	<div class="row">
		<div class="col-xs-12">
			<h1>Listing Active Store Templates</h1>
			<hr/>
			<%= link_to 'New Active store template', new_active_store_template_path, class: 'pull-right', method: :get %>
			<table class="table table-striped table-bordered table-hover table-condensed">
				<thead style="color: #fff;">
					<tr>
						<th>#</th>
						<th>Type</th>
						<th>Subject</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody style="color: #333;">
					<% unless @active_store_templates.empty? %>
						<% @active_store_templates.each_with_index do |active_store_template, index| %>
						<tr>
							<td><%= index + 1%></td>
							<td><%= active_store_template.email_type.name%></td>
							<td><%= active_store_template.template.subject%></td>
							<td><%= link_to 'Preview', active_store_template.template %></td>
						</tr>
						<% end %>
					<% else %>
						<tr>
							<td colspan="4">You didn't set any email templates yet. Please set anyone.</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

