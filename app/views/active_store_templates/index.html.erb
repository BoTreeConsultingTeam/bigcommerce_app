<div class="content animate-panel">

	<div class="row">
		<div class="col-lg-12">
			<div class="hpanel">
				<div class="panel-body">
					<%= link_to 'New Active store template', new_active_store_template_path, class: 'btn btn-success pull-right', method: :get %>
					<div class="clearfix"></div>
					<div class="table-responsive top5">
						<table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>#</th>
									<th>Type</th>
									<th>Subject</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% unless @active_store_templates.empty? %>
									<% @active_store_templates.each_with_index do |active_store_template, index| %>
									<tr>
										<td><%= index + 1%></td>
										<td><%= active_store_template.email_type.name%></td>
										<td><%= active_store_template.template.subject%></td>
										<td>
											<%= link_to active_store_template.template, method: :get, style: 'font-size: 25px;' do %>
												<i class="pe-7s-look"></i>
											<% end %>
										</td>
									</tr>
									<% end %>
								<% else %>
									<tr>
										<td colspan="4">You didn't set any email templates yet. Please set anyone.</td>
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>

				</div>
				<div class="panel-footer">
					Table - <%= @active_store_templates.count%> rows
				</div>
			</div>
		</div>
	</div>

</div>

