<%= simple_form_for(@template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :email_type_id, collection: EmailType.pluck(:name, :id), include_blank: false %>
  	<%= f.input :subject %>
  	<%= f.input :body, :as => :ckeditor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
