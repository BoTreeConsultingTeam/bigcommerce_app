<div class="normalheader transition animated fadeIn">
	<div class="hpanel">
		<div class="panel-body">
			<a class="small-header-action" href="">
			<div class="clip-header">
				<i class="fa fa-arrow-up"></i>
			</div> </a>

			<div id="hbreadcrumb" class="pull-right m-t-lg">
				<ol class="hbreadcrumb breadcrumb">
					<li>
						<a href="index.html">Dashboard</a>
					</li>
					<li>
						<span>Template</span>
					</li>
					<li class="active">
						<span>Show</span>
					</li>
				</ol>
			</div>
			<h2 class="font-light m-b-xs"> Email Template </h2>
			<small>Email Template - View</small>
		</div>
	</div>
</div>
<div class="content animate-panel">
	<div class="row">
		<div class="col-md-12">
			<div class="hpanel email-compose">
				<div class="panel-heading hbuilt">
					<div class="p-xs h4">
						Template Content
					</div>
				</div>
				<div class="border-top border-left border-right bg-light">
					<div class="p-m">
						<div>
							<span class="font-extra-bold">Event: </span>
							<%= @template.event.name%>
						</div>
						<div>
							<span class="font-extra-bold">Event Type: </span>
							<%= @template.event_type.name%>
						</div>
						<div>
							<span class="font-extra-bold">Subject: </span>
							<%= @template.subject%>
						</div>
						<div>
							<span class="font-extra-bold">Status: </span>
							<%= @template.active? ? "Active" : "In-Active"%>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<div>
						<%= @template.body.html_safe%>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
