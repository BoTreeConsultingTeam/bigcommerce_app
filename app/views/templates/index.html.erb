<p id="notice">
	<%= notice %>
</p>
<div class="container" style="margin-top: 90px;">
	<div class="row">
		<div class="col-xs-12">
			<h1>Listing Templates</h1>
			<hr/>
			<%= link_to 'New Template', new_template_path, class: 'pull-right', method: :get %>
			<%= link_to 'Fire Email For testing', fire_email_path %>
			<table class="table table-striped table-bordered table-hover table-condensed">
				<thead style="color: #fff;">
					<tr>
						<th>#</th>
						<th>Type</th>
						<th>Subject</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody style="color: #333;">
					<% unless @templates.empty? %>
						<% @templates.each_with_index do |template, index| %>
						<tr>
							<td><%= index + 1%></td>
							<td><%= template.email_type.name%></td>
							<td><%= template.subject%></td>
							<td><%= link_to 'Preview', template %></td>
						</tr>
						<% end %>
					<% else %>
						<tr>
							<td colspan="4">No templates available. Please add.</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= paginate @templates %>
		</div>
	</div>
</div>
